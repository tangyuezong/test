<form id="edit-form" class="form-horizontal" role="form" data-toggle="validator" method="POST" action="">
	<input id="c-id" data-rule="required" class="form-control form-control" name="row[id]" type="hidden" value="{$row.id}">
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Accountset.name')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-name" class="form-control form-control" type="text" value="{$groupinfo.name}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Accountset.openid')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-openid" class="form-control form-control" type="text" name="row[openid]" value="{$groupinfo.openid}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Group_id')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-group_id" data-rule="required" class="form-control form-control" name="row[group_id]" type="text" value="{$row.group_id}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Fenrundate')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-fenrundate" data-rule="required" class="form-control form-control" name="row[fenrundate]" type="number" value="{$row.fenrundate}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Amount')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-amount" data-rule="required" class="form-control form-control" name="row[amount]" type="number" value="{$row.amount}" readonly="readonly">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">{:__('Realamount')}:</label>
        <div class="col-xs-12 col-sm-8">
            <input id="c-realamount" data-rule="required" class="form-control form-control" name="row[realamount]" type="number" value="{$row.amount}">
        </div>
    </div>
    <div class="form-group layer-footer">
        <label class="control-label col-xs-12 col-sm-2"></label>
        <div class="col-xs-12 col-sm-8">
            <button type="submit" class="btn btn-success btn-embossed disabled">{:__('确认分润转账')}</button>
        </div>
    </div>
</form>
